alias ls='ls --color=auto'
alias la='ls -a'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias gs='git status'
alias c='clear'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias tmux='tmux -u'

# 42tokyo setting
alias norminette='norminette -R CheckForbiddenSourceHeader'

# as nvim lsp is large, create symbolic link for pre-installed lsp
alias nvimlsp='rm -rf ~/.local/share/nvim/mason && ln -s /home/nvimlsp ~/.local/share/nvim/mason'

